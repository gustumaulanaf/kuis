<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".ListVideoActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:text="Daftar Video"
        android:textSize="50sp"
        android:textColor="@color/hijautua"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/btVideo1"
        android:background="@color/hijautua"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <ImageView
            android:src="@mipmap/video"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:text="Video 1"
            android:textSize="20sp"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/btVideo2"
        android:background="@color/hijautua"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <ImageView
            android:src="@mipmap/video"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:text="Video 2"
            android:textSize="20sp"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/btVideo3"
        android:background="@color/hijautua"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <ImageView
            android:src="@mipmap/video"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:text="Video 3"
            android:textSize="20sp"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_alignParentBottom="true"
        android:src="@mipmap/kedua"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
</RelativeLayout>