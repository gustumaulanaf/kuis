<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".KuisActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nilai : "
            android:textColor="@color/hijautua"
            android:textSize="18sp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvSkor"
            android:textColor="@color/hijautua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="18sp" />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="High Score Anda :"
            android:textColor="@color/hijautua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvHighScore"
            android:layout_width="wrap_content"
            android:text="0"
            android:textColor="@color/hijautua"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sebutkan 3 nama negara Asia"
        android:textColor="@color/hijautua"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rgPilihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbA"
                android:textColor="@color/hijautua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbB"
                android:textColor="@color/hijautua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hijautua"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbD"
                android:textColor="@color/hijautua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbE"
                android:textColor="@color/hijautua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testing"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:background="@color/putih"
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Submit"
        android:textAllCaps="false" />
</LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_alignParentBottom="true"
        android:src="@mipmap/kedua"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
</RelativeLayout>