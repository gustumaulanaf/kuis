<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/money" />
    <LinearLayout
        android:id="@+id/layoutMateri"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_book_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Materi"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutVideo"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_videocam_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Video"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutContohSoal"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_import_contacts_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Contoh Soal"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutKuis"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_description_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Kuis"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutKeluar"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleX="-1"
            android:src="@drawable/ic_exit_to_app_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_margin="10dp"
            android:text="Logout"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>